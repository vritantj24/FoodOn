<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOn" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/darkgray</item>

        <!--
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/darkgray</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
    </style>

    <style name="AppThemeNoActionbar" parent="Theme.FoodOn">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.FoodOn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FoodOn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FoodOn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>